{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "nodenext",

    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./dist",

    "typeRoots": ["node_modules/@types", "./preprocessor", "./parser"],

    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  },

  "exclude": ["./test/*"]
}
